<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_height="match_parent"
    android:background="@color/gray_light___"
    android:orientation="vertical">

    <com.common.view.CTextView
        android:layout_width="match_parent"
        android:text="Batco roadlines"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        style="@style/txt_theme_18"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-40dp"
        android:orientation="vertical">

        <com.common.view.CEditTextView
            android:id="@+id/editPassword"
            android:layout_marginTop="40dp"
            style="@style/txt_theme_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/squere_edittext"
            android:hint="Password"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.common.view.CButtonViewM
                android:id="@+id/btnSubmit"
                style="@style/txt_theme_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_effect"
                android:text="Submit"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>